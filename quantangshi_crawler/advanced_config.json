{
    "crawler_settings": {
        "start_volume": 88,
        "end_volume": 100,
        "output_directory": "quantangshi_volumes",
        "delay_seconds": 3.0,
        "max_retries": 5,
        "retry_delay": 8.0,
        "max_requests_per_session": 8,
        "session_pool_size": 4,
        "test_mode": false,
        "max_volumes_per_run": 50
    },
    "session_management": {
        "session_timeout": 300,
        "rotate_user_agents": true,
        "use_proxy": false,
        "proxy_list": [],
        "session_rotation_strategy": "least_used"
    },
    "content_validation": {
        "check_for_poetry_content": true,
        "required_keywords": [
            "全唐詩", 
            "quantangshi",  
            "<h2>《<a", 
            "<td class=\"ctext\">", 
            "詩"
        ],
        "captcha_indicators": [
            "驗證碼", 
            "captcha", 
            "verification", 
            "security check",
            "請輸入驗證碼", 
            "請完成驗證", 
            "robot check", 
            "human verification",
            "cloudflare", 
            "security challenge", 
            "checking your browser",
            "please complete the security check",
            "ddos protection"
        ]
    },
    "output_format": {
        "save_debug_content": false,
        "debug_content_limit": 3,
        "verbose_logging": false,
        "save_failed_volumes": true
    },
    "anti_detection": {
        "randomize_delays": true,
        "min_delay": 1.5,
        "max_delay": 5.0,
        "use_realistic_headers": true,
        "simulate_human_behavior": true,
        "min_request_interval": 2.0
    },
    "retry_strategy": {
        "captcha_wait_time": {
            "min": 8,
            "max": 20
        },
        "http_403_wait_time": {
            "min": 5,
            "max": 15
        },
        "exponential_backoff": true
    }
} 